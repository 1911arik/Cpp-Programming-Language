# Process-1 

#include<stdio.h>
int main()
{

          int sum = 0 , n1 , n2, n3;

          float avg; 
                      

          printf("Enter the First number:");
          scanf_s("%d", &n1);


          printf("Enter the Second number:");
          scanf_s("%d", &n2);


          printf("Enter the Third number:");
          scanf_s("%d", &n3);

          sum = n1 + n2 + n3;  

          avg = sum*1.0 / 3;

          printf("Sum of three numbers is: %d\n", sum);

    

          printf("Average: %f", avg);





} 

# Process-2 

#include<stdio.h>
int main()
{

          int sum = 0 , n1 , n2, n3;

          float avg; 
                      

          printf("Enter the First number:");
          scanf_s("%d", &n1);


          printf("Enter the Second number:");
          scanf_s("%d", &n2);


          printf("Enter the Third number:");
          scanf_s("%d", &n3);

          sum = n1 + n2 + n3;  

          avg = (float)(sum) / 3;

          printf("Sum of three numbers is: %d\n", sum);

    

          printf("Average: %f", avg);





} 

# Process-3  

#include<stdio.h>
int main()
{

          int sum = 0 , i , num;

          float avg; 
                      

          for (i = 1; i <= 3; i++) {

                    printf("%d -- ", i);

                    scanf_s("%d", &num);

                    sum = sum + num;


          }

         

          avg = (sum) / (float)3;


          printf("Sum of three numbers is: %d\n", sum);

    

          printf("Average: %f", avg);





}

# Process-4

#include<stdio.h>
void avg();
int main()
{

       

         avg();


}                         


void avg() {


          int sum = 0, num;
                    
          float avg;

          for (int i = 1; i <= 3; i++) {

                    printf("%d -- ", i);

                    scanf_s("%d", &num);

                    sum = sum + num;


          }



          avg = (sum) / 3.0;

         
          printf("Sum of three numbers is: %d\n", sum);



          printf("Average: %f", avg);




}

